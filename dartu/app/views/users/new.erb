<h2>Sign Up</h2>
<% @user.errors.full_messages.each do |msg| %>
  <p style="color:red;"><%= msg %></p>
<% end %>
<form action="/signup" method="POST">
  <p>Name: <input style="position:absolute;left:375px;" type="text" name="username"></p>
  <p>Password: <input style="position:absolute;left:375px;" type="password" name="password"></p>
  <input type="submit" value="Sign Up">
</form>
<p style="text-align:center;">
  <a href="/users/login">Login</a>
</P>